<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--头部菜单-->
    <include layout="@layout/include_menu_navi"
        android:id="@+id/layout_menu_navi"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ededed">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ededed"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="@dimen/x42"
                    android:layout_height="@dimen/x42"
                    android:layout_margin="8dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/icon_account" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:columnCount="2"
                    android:rowCount="2">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_columnSpan="2"
                        android:layout_columnWeight="2"
                        android:layout_row="0"
                        android:paddingTop="@dimen/x4"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_gravity="top"
                        android:layout_row="1"
                        android:text="@string/account_mobile"
                        android:textColor="?attr/colorButtonNormal"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_columnWeight="5"
                        android:layout_gravity="top"
                        android:layout_row="1"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp" />



                </GridLayout>

            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="#FFFFFF"
                android:columnCount="2"
                android:padding="8dp"
                android:rowCount="2">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_row="0"
                    android:paddingLeft="5dp"
                    android:text="@string/account_email"
                    android:textColor="#000000" />

                <TextView

                    android:id="@+id/tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnWeight="7"
                    android:layout_gravity="top"
                    android:layout_row="0"
                    android:textColor="#273788"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_row="1"
                    android:paddingLeft="5dp"
                    android:text="@string/account_country"
                    android:textColor="#000000" />

                <TextView

                    android:id="@+id/tv_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnWeight="7"
                    android:layout_gravity="top"
                    android:layout_row="1"
                    android:textColor="#273788"
                    android:textSize="12sp" />


            </GridLayout>


            <TextView
                android:id="@+id/tv_add"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:background="@drawable/shape_button_radius_orange"
                android:gravity="center"
                android:text="@string/friend_add"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="20sp"
                android:textStyle="bold" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>