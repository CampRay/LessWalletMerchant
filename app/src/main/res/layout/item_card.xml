                    android:textColor="#454545"
                    android:textSize="10sp" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_above="@+id/ll_buttom"
                    android:layout_alignParentBottom="false"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_columnWeight="3"
                        android:layout_gravity="left|center_vertical"
                        android:layout_row="0"
                        android:text="@string/coupon_publish_date"
                        android:textColor="#000000"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="right|center_vertical"
                        android:layout_row="0"
                        android:text="@string/coupon_stock_quantity"
                        android:textColor="#000000"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_expired"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_columnWeight="3"
                        android:layout_gravity="bottom"
                        android:layout_row="1"
                        android:gravity="bottom"
                        android:textColor="#454545"
                        android:textSize="10sp"
                        tools:text="15/OCT/2017 - 30/OCT/2017" />

                    <TextView
                        android:id="@+id/tv_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="bottom"
                        android:layout_row="1"
                        android:gravity="bottom|right"
                        android:textColor="#454545"
                        android:textSize="10sp"
                        tools:text="0" />

                </GridLayout>

                <LinearLayout
                    android:id="@+id/ll_buttom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="false"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_more"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_button_radius_orange"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:text="@string/button_detail"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_give"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_button_radius_orange"
                        android:gravity="center"
                        android:text="@string/button_give"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />
                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>



