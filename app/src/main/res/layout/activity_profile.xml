<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--头部菜单-->
    <include layout="@layout/include_menu"
        android:id="@+id/home_layout_menu"/>

    <!--主页内容布局-->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/home_layout_menu"
        android:background="#273751"
        android:columnCount="2"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:rowCount="3"
        android:useDefaultMargins="true">


        <LinearLayout
            android:id="@+id/ll_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="@drawable/shape_button_profile"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/y60"
                android:layout_gravity="center_horizontal"
                android:paddingTop="@dimen/y20"
                android:src="@mipmap/icon_account" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ACCOUNT"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="@drawable/shape_button_profile"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/y60"
                android:layout_gravity="center_horizontal"
                android:paddingTop="@dimen/y20"
                android:src="@mipmap/icon_friends" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FRIENDS"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_skin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="@drawable/shape_button_profile"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/y60"
                android:layout_gravity="center_horizontal"
                android:paddingTop="@dimen/y20"
                android:src="@mipmap/icon_skin" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SKIN"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="@drawable/shape_button_profile"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/y60"
                android:layout_gravity="center_horizontal"
                android:paddingTop="@dimen/y20"
                android:src="@mipmap/icon_setting" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SETTING"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:background="@drawable/shape_button_profile"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/y60"
                android:layout_gravity="center_horizontal"
                android:paddingTop="@dimen/y20"
                android:src="@mipmap/icon_history" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HISTORY"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_trash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:background="@drawable/shape_button_profile"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/y60"
                android:layout_gravity="center_horizontal"
                android:paddingTop="@dimen/y20"
                android:src="@mipmap/icon_trash" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TRASH"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>


    </GridLayout>
</RelativeLayout>
