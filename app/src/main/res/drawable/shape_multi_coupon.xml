<?xml version="1.0" encoding="utf-8"?>
<!--layer-list是图层设计列表，每个item都是一个图层，最先的item显示在最下面，最后一个显示在最上面-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 最外层 -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" >
            <!--背景颜色 -->
            <!--<solid android:color="#ededed" />-->
            <gradient
                android:startColor="#99000000"
                android:endColor="#ededed"
                android:angle="270"/>
            <!--控制边界线颜色和大小-->
            <stroke android:width="0dp" android:color="#969696" />
            <!--控制底部圆角大小-->
            <corners  android:bottomLeftRadius="6dp" android:bottomRightRadius="6dp"/>
        </shape>
    </item>
    <item android:bottom="4dp" android:top="-2dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" >
            <!--背景颜色 -->
            <gradient
                android:startColor="#99000000"
                android:endColor="#ededed"
                android:angle="270"/>

            <!--控制边界线颜色和大小-->
            <stroke android:width="0dp" android:color="#969696" />
            <!--控制底部圆角大小-->
            <corners  android:bottomLeftRadius="6dp" android:bottomRightRadius="6dp"/>
        </shape>
    </item>
    <item android:bottom="8dp"  android:top="-2dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <!--背景颜色 -->
            <solid android:color="#ededed" />
            <!--控制边界线颜色和大小-->
            <stroke android:width="0dp" android:color="#969696"/>
            <!--控制底部圆角大小-->
            <corners  android:bottomLeftRadius="6dp" android:bottomRightRadius="6dp"/>
        </shape>
    </item>
</layer-list>