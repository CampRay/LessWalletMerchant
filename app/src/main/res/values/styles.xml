<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--设置应用没有ActionBar的主题样式-->
    <style name="AppTheme.NoActionBar">
        <!--设置应用是否有ActionBar-->
        <item name="windowActionBar">false</item>
        <!--设置应用是否有标题栏-->
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

        <!--系统自身状态栏颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--控制应用中各个控件被选中时的颜色-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--应用页面背景色-->
        <item name="android:windowBackground">@color/windowBackg</item>
        <!--系统自身底部导航栏颜色,需要Android API Level 21才可以设置-->
        <!--<item name="android:navigationBarColor">@color/navigationColor</item>-->
        <!--Appbar背景色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--Appbar上的Title文本颜色-->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <!--各个控制控件的默认颜色-->
        <item name="colorControlNormal">@color/colorControlNormal</item>
    </style>

    <!--设置对话框的主题样式-->
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!--全屏加透明-->
    <style name="AppTheme.Translucent.FullScreen" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!--全屏-->
    <style name="AppTheme.FullScreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="style_common">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="style_text" parent="style_common">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="style_text_small" parent="style_common">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="style_text_middle" parent="style_common">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="style_text_large" parent="style_common">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="style_text_black" parent="style_text">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="style_text_white" parent="style_text">
        <item name="android:textColor">#ffffff</item>
    </style>


</resources>
